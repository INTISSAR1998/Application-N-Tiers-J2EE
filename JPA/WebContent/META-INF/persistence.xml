<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
  <persistence-unit name="Employes" transaction-type="RESOURCE_LOCAL">
  <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
<class>jpa.Departement</class>
<class>jpa.Personne</class>
<class>jpa.Employe</class>
<class>jpa.Projet</class>
<class>jpa.Participation</class>
  <properties>
    <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
    <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/employes" />
    <property name="javax.persistence.jdbc.user" value="root" />
    <property name="javax.persistence.jdbc.password" value="" />
    <property name="eclipselink.ddl-generation" 
      value="drop-and-create-tables"/>
    <property name="eclipselink.logging.level" value="FINEST"/>
  </properties>  
  </persistence-unit>
</persistence>

